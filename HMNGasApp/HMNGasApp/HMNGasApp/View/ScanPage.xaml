<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HMNGasApp.View.ScanPage">
    <ScrollView>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="10">
            <Button Text="Capture photo" x:Name="GetPhotoButton" Clicked="GetPhotoButton_OnClicked"></Button>
            <!--<Button Text="Capture photo using gray scale" x:Name="GetPhotoGrayScaleButton" Clicked="GetPhotoGrayScaleButton_OnClicked"></Button>-->
            <ActivityIndicator x:Name="activityIndicator"></ActivityIndicator>
            <Image x:Name="PhotoImage"></Image>
            <Label HorizontalOptions="Center" Text="{Binding LabelText}" />
        </StackLayout>
    </ScrollView>
</ContentPage>